###
# Request an authentication token
# @name auth
POST https://login.microsoftonline.com/YOUR_TENANT_ID/oauth2/v2.0/token
Content-Type: application/x-www-form-urlencoded

grant_type=client_credentials
&client_id=YOUR_CLIENT_ID
&client_secret=YOUR_CLIENT_SECRET_HERE
&scope=api://YOUR_CLIENT_ID/.default

###
# Create a new event using the authentication token
# @name createEvent
POST YOUR_CREATEEVENT_FUNCTION_URL
Content-Type: application/json
Authorization: Bearer {{auth.response.body.access_token}}

{
    "name": "Authenticated Event",
    "date": "2025-11-01T10:00:00Z",
    "location": "Secure"
}